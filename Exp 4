ALTER TABLE STUDENT_A ADD(PASS_FAIL VARCHAR(55));

UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=1;
UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=2;
UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=3;
UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=4;
UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=5;
UPDATE STUDENT_A SET PASS_FAIL ='PASS' WHERE ROLL_NO=6;

UPDATE STUDENT_A SET MATHS= '20' WHERE ROLL_NO=7;
UPDATE STUDENT_A SET PHYSICS= '11' WHERE ROLL_NO=8;
UPDATE STUDENT_A SET CHEMISTRY= '10' WHERE ROLL_NO=9;
UPDATE STUDENT_A SET MATHS= '18' WHERE ROLL_NO=10;

UPDATE STUDENT_A SET PASS_FAIL = 'FAIL' WHERE ROLL_NO=7;
UPDATE STUDENT_A SET PASS_FAIL = 'FAIL' WHERE ROLL_NO=8;
UPDATE STUDENT_A SET PASS_FAIL = 'FAIL' WHERE ROLL_NO=9;
UPDATE STUDENT_A SET PASS_FAIL = 'FAIL' WHERE ROLL_NO=10;

SELECT AVG(PHYSICS) FROM STUDENT_A;

SELECT MAX(MATHS) AS highest_marks_maths FROM STUDENT_A;

SELECT MIN(CHEMISTRY) AS lowest_marks_chemistry FROM STUDENT_A;

SELECT COUNT(ROLL_NO) AS pass_physics FROM STUDENT_A WHERE PHYSICS >= 12;

SELECT * FROM STUDENT_A WHERE PHYSICS>=12 AND CHEMISTRY>=12 AND MATHS>=25;

SELECT ROLL_NO,( PHYSICS+ CHEMISTRY + MATHS) AS TOTAL ,PASS_FAIL FROM STUDENT_A ORDER BY TOTAL DESC;

SELECT (SUM(MATHS/500)*100) AS AVG_MATHS FROM STUDENT_A;

SELECT (SUM((PHYSICS+ CHEMISTRY + MATHS)/1000)*100) AS AVG_CLASS FROM STUDENT_A;

SELECT COUNT (*) AS TOTAL_PASS FROM STUDENT_A WHERE PASS_FAIL = 'PASS';
